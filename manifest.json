{
	"manifest_version": 2,
	"name": "YOURLS",
	"version": "1.1",
	"description": "Shorten URLs with your own YOURLS instance",
	"options_page": "html/options.html",
	"browser_action":
	{
		"default_icon": "img/logo48.png",
		"default_popup": "html/popup.html"
	},
	"icons":
	{
		"16": "img/logo16.png",
		"48": "img/logo48.png",
		"128": "img/logo128.png"
	},
	"permissions":
	[
		"tabs",
		"clipboardWrite",
		"contextMenus",
		"unlimitedStorage",
		"http://*/*",
		"https://*/*"
	],
	"web_accessible_resources":
	[
		"js/popup.js",
		"css/style.css"
	],
	"content_scripts":
	[
		{
			"js": ["js/popup.js"],
			"matches":
			[
				"http://*/*",
				"https://*/*"
			],
			"all_frames": true
		}
	],
	"background":
	{
		"scripts": ["js/context.js", "js/background.js"]
	}
}
